<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7BBEEA"
                android:endColor="#5FAEDC"
                android:angle="90"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#E32636"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8ECEF3"
                android:endColor="#6DBBE8"
                android:angle="90"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#E32636"/>
        </shape>
    </item>
</selector>
